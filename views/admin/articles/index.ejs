<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<body >
    <div class="container" >
        <hr>
        <h1>Artigos</h1>
        <hr>
        <a class="btn btn-success " href="/admin/articles/new" > Criar Novo Artigo</a>
        <hr>
        <table class="table table-bordered" >
            <thead>
                <tr>
                    <th>Id:</th>
                    <th>Titulo:</th>
                    <th> Slug:</th>
                    <th> Categoria:</th>
                    <th>

                    </th>
                </tr>

            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                    <tr>
                    <td><%=article.id%></td>
                    <td><%=article.title%></td>
                    <td><%=article.slug%></td>
                    <td><%=article.category.title%></td>
                    <td >
                        <a href="/admin/articles/edit/<%=article.id%>"class="btn btn-warning m-1" >Editar</a>
                        <form method="POST"  action="/articles/delete"  style="display : inline;" onsubmit="confirmarDelecao(event,this)">
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-danger" > Deletar</button>
                        </form>
                    </td>

                    </tr>

                 <%}) %>
            </tbody>
        </table>
    </div>

</body>
<%- include('../../partials/footer') %>

<script>
    function confirmarDelecao(event,form){
        event.preventDefault();
        var decision = confirm("VocÃª quer deletar este Artigo?");
        if(decision){
            form.submit();
        }
    }
</script>