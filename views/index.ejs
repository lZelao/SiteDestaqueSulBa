<%- include('partials/header') %>
<%- include('partials/homenavbar') %>

<body>
    <div class="container col-md-8" style="margin-top: 80px; max-width: 800px; margin-left: auto; margin-right: auto;">
        <div class="row" style="margin-top: 80px; max-width: 800px; margin-left: auto; margin-right: auto;">
            <% if (articles.length > 0) { %>
                <div class="col-md-12">
                    <div class="card mb-4">
                        <a href="/<%= articles[0].slug%>">
                            <img src="/<%= articles[0].image%>" style="max-width: 100%; height: auto;">
                            <div class="card-body">
                                <h2 class="card-title is-size-7"><%= articles[0].title %></h2>
                                <a class="btn btn-warning" href="/<%= articles[0].slug%>">Ler Artigo</a>
                            </div>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="row">
            <% articles.forEach((article) => { %>
            <div class="col-md-4" style="position: relative; margin-top: 20px; margin-bottom: 20px; height: 200px;">
                <div class="card mb-4" style="height: 100%;">
                    <a href="/<%= article.slug %>">
                        <img src="/<%= article.image%>" alt="" style="max-width: 100%;">
                        <div style="position: absolute; bottom: 0; width: 100%; display: flex; justify-content: center; align-items: center; background-color: rgba(0, 0, 0, 0.7); padding: 5px;">
                            <h2 class="card-title is-size-7" style="color: white; font-size: 16px; text-align: center; width: 100%;"> <%= article.title %></h2>
                        </div>
                    </a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>
<%- include('partials/footer') %>
